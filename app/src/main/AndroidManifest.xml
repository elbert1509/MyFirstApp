<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.firstapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.camera.hardware.ar" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bebe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirstApp"
        tools:targetApi="31">
        <activity
            android:name=".Detail"
            android:exported="false" />
        <activity
            android:name=".Video"
            android:label="Video"
            android:exported="false" />
        <activity
            android:name=".FaceActivity"
            android:exported="false" />
        <activity
            android:name=".Camera"
            android:label="Camera"
            android:exported="false" />
        <activity
            android:name=".animaux"
            android:exported="false" />
        <activity
            android:name=".LecteurMusiqueActivity"
            android:exported="false" />
        <activity
            android:name=".panierActivity"
            android:exported="false" />
        <activity
            android:name=".nombreActivity"
            android:exported="false"
            android:parentActivityName=".homeAtivity" />
        <activity
            android:name=".homeAtivity"
            android:exported="false"
            android:label="@string/home_activity_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>